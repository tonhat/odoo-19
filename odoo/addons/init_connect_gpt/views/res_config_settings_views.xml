<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_inherit_init_connect_gpt" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.init_connect_gpt</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">
        <div class="app_settings_block" data-string="Init Connect GPT" string="Init Connect GPT">
          <h2>Init Connect GPT</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_right_pane">
                <label for="init_connect_gpt_api_key"/>
                <div class="text-muted">OpenAI API connection settings.</div>
                <div class="mt16">
                  <field name="init_connect_gpt_api_key" password="True"/>
                </div>
                <div class="mt16">
                  <field name="init_connect_gpt_api_token" password="True" placeholder="Bearer token for /api/v1/*"/>
                </div>
                <div class="mt16">
                  <button type="object" name="action_init_connect_gpt_test_connection" string="Test Connection" class="btn btn-primary"/>
                </div>
                <div class="mt16">
                  <field name="init_connect_gpt_base_url" placeholder="https://api.openai.com"/>
                </div>
                <div class="mt16">
                  <field name="init_connect_gpt_model" placeholder="gpt-4o-mini"/>
                </div>
                <div class="mt16">
                  <field name="init_connect_gpt_timeout"/>
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
